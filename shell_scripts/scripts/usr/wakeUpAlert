#!/bin/bash
MY_HOME=home_ph
S='\u001B[32m'
E='\u001B[0m'
mes=${1//Ã¢/\\x22}
mes=${mes//\"/\\x22}
message="Hi user_ph, You got a message.\n=====================================\n${S}\n${mes}${E}\n====================================="
sudo su user_ph bash -c "gnome-terminal --working-directory=$MY_HOME -- bash -c 'echo -e \"$message\";bash -i'"
